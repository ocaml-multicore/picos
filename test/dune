(library
 (name test_scheduler)
 (modules test_scheduler)
 (libraries
  (re_export picos)
  (select
   test_scheduler.ml
   from
   (picos.fifos -> test_scheduler.ocaml5.ml)
   (picos.threaded -> test_scheduler.ocaml4.ml))))

;;

(test
 (name test_picos)
 (modules test_picos)
 (libraries
  test_scheduler
  foundation
  alcotest
  unix
  threads.posix
  domain_shims))

;;

(test
 (name test_sync)
 (modules test_sync)
 (libraries picos.sync test_scheduler alcotest domain_shims))

