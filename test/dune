(library
 (name test_scheduler)
 (modules test_scheduler)
 (libraries
  (re_export picos)
  (select
   test_scheduler.ml
   from
   (picos.fifos picos.randos picos.structured -> test_scheduler.ocaml5.ml)
   (picos.threaded -> test_scheduler.ocaml4.ml))))

(library
 (name test_util)
 (modules test_util))

;;

(test
 (name test_picos)
