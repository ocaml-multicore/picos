(* -*- tuareg -*- *)

let maybe_domain_shims =
  if Jbuild_plugin.V1.ocaml_version < "5" then "domain_shims" else ""

let () =
  Jbuild_plugin.V1.send
  @@ {|

(test
 (name main)
 (action
  (run %{test} -brief))
 (libraries
  picos
  foundation
  (select scheduler.ml from
   (schedulers -> scheduler.ocaml5.ml)
   (           -> scheduler.ocaml4.ml))
  multicore-bench
  multicore-magic |}
  ^ maybe_domain_shims ^ {| ))
|}
