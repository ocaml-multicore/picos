(library
 (name test_scheduler)
 (modules test_scheduler)
 (libraries
  picos
  (select
   test_scheduler.ml
   from
   (picos.select schedulers -> test_scheduler.ocaml5.ml)
   (picos.threaded -> test_scheduler.ocaml4.ml))))

