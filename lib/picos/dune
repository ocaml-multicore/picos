(library
 (name picos)
 (public_name picos)
 (libraries
  (re_export picos.exn_bt)
  picos_bootstrap
  (select
   picos.ml
   from
   (picos_ocaml4 -> picos.common.ml)
   (picos_ocaml5 -> picos.common.ml))
  (select
   intf.ml
   from
   (picos_ocaml4 -> intf.ocaml4.ml)
   (picos_ocaml5 -> intf.ocaml5.ml))))

(mdx
 (enabled_if
  (< %{ocaml_version} 5.0.0))
 (libraries picos picos.exn_bt picos.structured picos.threaded domain_shims)
 (files picos.mli))

(mdx
 (enabled_if
  (>= %{ocaml_version} 5.0.0))
 (libraries picos picos.exn_bt picos.fifos picos.structured)
 (files picos.mli))
