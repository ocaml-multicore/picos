(library
 (name test_scheduler)
 (modules test_scheduler)
 (libraries
  (re_export picos)
  picos.select
  (select
   test_scheduler.ml
   from
   (picos.fifos
    picos.multififos
    picos.randos
    picos.lwt_unix
    picos.thread
    ->
    test_scheduler.ocaml5.ml)
   (picos.threaded lwt.unix -> test_scheduler.ocaml4.ml))))

(library
 (name test_util)
 (modules test_util))

;;

(test
 (name test_picos)
 (modules test_picos)
 (libraries
  test_scheduler
  picos.finally
  backoff
  alcotest
  unix
  threads.posix
  domain_shims))

;;

(test
 (name test_sync)
 (modules test_sync)
 (libraries
  picos.structured
  picos.sync
  test_scheduler
  alcotest
  domain_shims
  unix)
 (action
  (progn
   (run %{test} -- "Event" 0)
   (run %{test} -- "Lazy" 0)
   (run %{test} -- "Lazy" 1)
   (run %{test} -- "Semaphore" 0)
   (run %{test} -- "Semaphore" 1)
   (run %{test} -- "Mutex and Condition" 0)
   (run %{test} -- "Mutex and Condition" 1)
   (run %{test} -- "Mutex and Condition" 2))))

;;

